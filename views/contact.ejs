<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Basic meta setup for encoding and responsiveness -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Page title -->
  <title>Contact - Malachi Rewane</title>

  <!-- Main stylesheet -->
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <!-- Header with title and navigation links -->
  <header>
    <h1>Contact Me</h1>
    <nav>
      <ul>
        <!-- Navigation menu linking to other pages -->
        <li><a href="/">Home</a></li>
        <li><a href="/about">About Me</a></li>
        <li><a href="/projects">Projects</a></li>
        <li><a href="/contact">Contact Me</a></li>
      </ul>
    </nav>
  </header>

  <!-- Main content: contact form -->
  <main>
    <!-- Basic contact form with name, email, phone, and comments fields -->
    <form action="#" method="post">
      <!-- Name input -->
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required><br><br>

      <!-- Email input -->
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required><br><br>

      <!-- Phone number input with validation pattern -->
      <label for="phone">Cell No.:</label>
      <input type="tel" id="phone" name="phone" pattern="[0-9]{10}" placeholder="1234567890" required><br><br>

      <!-- Comments text area -->
      <label for="comments">Comments:</label><br>
      <textarea id="comments" name="comments" rows="4" cols="40" required></textarea><br><br>

      <!-- Submit button -->
      <button type="submit">Submit</button>
    </form>
  </main>


#!/usr/bin/env node

/**
 * This file starts the Express server
 * It's the entry point that makes the website run
 */
var app = require('../app');
var debug = require('debug')('portfolio-express:server');
var http = require('http');

/**
 * Set the port number from environment or use 3000 as default
 */
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create the HTTP server using our Express app
 */
var server = http.createServer(app);

/**
 * Start the server and listen for requests
 */
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Make sure the port number is valid
 */
function normalizePort(val) {
  var port = parseInt(val, 10);
  if (isNaN(port)) return val;
  if (port >= 0) return port;
  return false;
}

/**
 * Handle server errors gracefully
 */
function onError(error) {
  if (error.syscall !== 'listen') throw error;
  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Show message when server starts successfully
 */
function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
  console.log('Server running on http://localhost:' + addr.port);
}